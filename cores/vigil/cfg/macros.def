[all]
CORENAME=JTVIGIL
JTFRAME_BUTTONS=2
JTFRAME_WIDTH=256
JTFRAME_HEIGHT=256
JTFRAME_SDRAM_BANKS
JTFRAME_COLORW=5
JTFRAME_MRA_DIP
# JTFRAME_STATUS
JTFRAME_CREDITS
JTFRAME_PLL=jtframe_pll6144

# Clocking
# Change the clock to 48MHz if problems are reported
# cycle recovery in the Z80 may create issues at 24MHz
JTFRAME_CLK24
JTFRAME_PXLCLK=6

# ROM file layout
# BA0, main CPU ROM
# BA1, sound CPU and PCM
# BA3, sprites
BA1_START    =0x20000
PCM_START    =0x30000
BA2_START    =0x40000
SCR2_START   =0x80000
BA3_START    =0xc0000

